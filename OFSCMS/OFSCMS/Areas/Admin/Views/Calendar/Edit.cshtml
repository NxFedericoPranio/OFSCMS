@{
    ViewBag.Title = "EditNews";
}
@model DataClasses.DataModel.Calendar.OFSEvent
<h2>Edit Event</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div id="adminForm">
@using (Html.BeginForm()) {
 @Html.ValidationSummary(true)
    <fieldset>
        <legend>TestMain</legend>

        @Html.HiddenFor(model => model.Id)        
        @Html.HiddenFor(model => model.Culture)

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

         <div class="editor-label">
            @Html.LabelFor(model => model.Date)
            @Html.Label(Model.Date.ToString("d"))
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date, new {id = "date" })
            @Html.ValidationMessageFor(model => model.Date)
        </div>

         <div class="editor-label">
            @Html.LabelFor(model => model.Time)
            @Html.Label(Model.Time.ToString("hh:MM"))
        </div>
         <div class="editor-field">
            @Html.EditorFor(model => model.Time, new {id = "time" })
            @Html.ValidationMessageFor(model => model.Time)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SeoTitle)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SeoTitle)
            @Html.ValidationMessageFor(model => model.SeoTitle)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description,20,40,null)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
    }
</div>
<script src="@Url.Content("~/Areas/Admin/Js/Calendar.js")" type="text/javascript"></script>