@{
    ViewBag.Title = "Edit Guestbook messages";
}
@model DataClasses.DataModel.Guestbook.GuestMessage
<h2>EditNews</h2>

<script src="@Url.Content("~/Scripts/framework/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/framework/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
<div id="adminForm">
    @using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>TestMain</legend>

        @Html.HiddenFor(model => model.Id)        
        @Html.HiddenFor(model => model.Culture)
          
        @Html.HiddenFor(model => model.PrivacyAccepted)

        <div class="editor-label">
            Scritto da
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nick)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsAapproved)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsAapproved)
            @Html.ValidationMessageFor(model => model.IsAapproved)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Message)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Message,20,40,null)
            @Html.ValidationMessageFor(model => model.Message)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
    }
    
    </div>
}