@using OFSCore.Extension
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="keywords" content='@ViewBag.Keywords'/>
    <meta name="description" content='@ViewBag.Description'/>
    <link href="@Url.Content("~/Content/AdminStyle.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-2.0.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/JqueryScript.js")" type="text/javascript"></script>
    <script type="text/javascript">
        var scriptName = '@ViewBag.ScriptName';
    </script>
</head>
<body>
    <div id="main">
        <div id="mainWrapper">
            <header>
                <div id="testata">
                    <img src='@Html.Image("../Graphics/TopSx.gif")' /><img src='@Html.Image("../Graphics/TopDx.gif")' />
                    <div id="SiteTitle"><span class='r1'>BENVENUTO</span><br />
                        <span class='r2'></span></div>
                </div>
            </header>

            <nav>
                <div id="mainMenu">
                
                </div>
            </nav>

           
            <div id="wrapper">
                <nav>                       
                    @Html.Action("Show", "AdminSideMenu", new { path = OFSCore.Folders.MenuFolder })
                </nav>
                <div id="content">                       
                    @RenderBody()
                </div>
            </div>
            <div id="footer">
                   
                <p class="footer"></p>
            </div>
        </div>
    </div>

  
</body>
</html>
