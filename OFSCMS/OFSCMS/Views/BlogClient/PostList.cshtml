@{
    ViewBag.Title = "Calendario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    @using OFSCore.Extension

@model List<DataClasses.DataModel.Generic.IOFSObject>
           @using DataClasses.DataModel.News;
<script type="text/javascript">
$(document).ready(function(){
    AjaxNews(0)
});
    @{
        OFSCore.Base.ControllerBase controller =(OFSCore.Base.ControllerBase)HttpContext.Current.Session["controllerInstance"];
        int pageSize = controller.PageSize;
        }
  
function AjaxNews(currPage) {
    var table = $('#newsContainer');
    var pager = $('#newsContainer');
    var newsPerPage = 10;
    $("#loading").show();
    $.ajax({
        url: '/BlogClient/ListOfPostAjax?page=' + currPage,
        type: 'GET',
        cache: false,
        context: table,
        complete: function () {
            $("#loading").hide();
        },
        success: function (news) {
            table.hide(1000);
            table.empty();
            $.each(news, function (index, info) {
                $('<div/>', {
                    html: $('<h2/>', {
                        html: info.Title
                    }).after($('<p/>', {
                        html: info.DateTime
                    })).after($('<p/>', {
                        html: info.Content
                    })).after($('<p/>', {
                        html: "Commenti"
                    }))
                }).appendTo(table);
                table.show(1000);
            });
            if (news.length / newsPerPage > 0){
                for (i = 0; i < (news.length / newsPerPage); i++) {
                    $('<a/>',
                        {
                            onclick: 'AjaxNews(' + i + ');',
                            title: i + '&nbsp;&nbsp;',
                            html: i + 1,
                            href: '#!' + (i + 1)
                        }).appendTo(pager);
                }
            }
        },
        error: function () { alert("error"); },
        always: function () {
            $("#loading").hide();
        }
    });
}
</script>


<div id="loading" style="top:300px; left:200px;"><img id="ImgWait" src="../../Graphics/wait.gif"/></div>
<div id="newsContainer">       
</div>

<div id="pager">
       
</div>